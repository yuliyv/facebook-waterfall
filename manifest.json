{
  "name": "Facebook Waterfall",
  "version": "0.0.0.0",
  "description": "replaces your fb newsfeed with an important reminder. original plugin by jordan west http://news-feed-eradicator.west.io/. waterfall gif by http://softwaring.tumblr.com/",
  "manifest_version": 2,
  "permissions": [
    "http://www.facebook.com/*",
    "https://www.facebook.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.facebook.com/*", "https://www.facebook.com/*"],
      "js": ["jquery.js", "eradicate.js"],
      "css": ["eradicate.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "options_page": "options.html"
}